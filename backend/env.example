# Pro Buddy Backend Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME="Pro Buddy API"
APP_VERSION="1.0.0"
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Firebase Admin SDK
# Download from: Firebase Console -> Project Settings -> Service Accounts -> Generate New Private Key
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json

# Google Gemini API
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Cloudflare
# Get from: https://dash.cloudflare.com/ -> Account ID in sidebar
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
# Get from: https://dash.cloudflare.com/profile/api-tokens (Create Token with Workers AI & Vectorize permissions)
CLOUDFLARE_API_TOKEN=your_api_token_here
# Embedding model to use
CLOUDFLARE_EMBEDDING_MODEL=@cf/baai/bge-base-en-v1.5

# Cloudflare Vectorize Index Names
VECTORIZE_INDEX_USERS=pro-buddy-users
VECTORIZE_INDEX_APPS=pro-buddy-apps

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Notification Settings
ENCOURAGING_COOLDOWN_HOURS=1
REMINDER_COOLDOWN_MINUTES=15

